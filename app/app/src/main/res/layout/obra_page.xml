<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintFundoId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ObraPage">
    <ImageView
        android:id="@+id/ImagemFundoId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/capa_fullmetal_alchemist_esp_01_g" />

    <LinearLayout
        android:id="@+id/superiorId"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/bottomId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/superiorId"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/banner"
            tools:layout_editor_absoluteY="450dp" />
    </LinearLayout>
</RelativeLayout>